<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity.MapsActivity2">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment

            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="569dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="401dp"
            android:layout_height="172dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/common_google_signin_btn_text_light_disabled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/campoCidadeID"
            android:layout_width="350dp"
            android:layout_height="46dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="Cidade"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/campoRuaID"
            android:layout_width="170dp"
            android:layout_height="46dp"

            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="Rua"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/map"
            app:layout_constraintTop_toBottomOf="@+id/campoCidadeID" />

        <TextView
            android:id="@+id/campoBairroID"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_marginEnd="11dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="11dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="20dp"

            android:background="@android:drawable/editbox_background_normal"
            android:hint="Bairro"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/campoRuaID"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campoCidadeID" />

        <Button
            android:id="@+id/btnLocalizacaoID"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="348dp"
            android:background="#cf03ff0b"
            android:text="Confirmar Localização"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    </android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>