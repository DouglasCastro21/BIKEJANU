<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="570dp"

    tools:context=".Activity.AlertarFurtoRoubo">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Alerta de Furto/Roubo"
        app:titleTextColor="@color/common_google_signin_btn_text_dark_default" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:layout_constraintVertical_bias="0.166">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="233dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:text="Use essa opção apenas em"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.638"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="caso de Furtos/Roubos"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.564"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toStartOf="@+id/textView15"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_warning" />


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="62dp"
                android:text="Nada Consta"
                app:layout_constraintBottom_toTopOf="@+id/txtRuaID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <RadioButton
                android:id="@+id/alertaFurtadaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="62dp"
                android:text="Furtada"
                app:layout_constraintBottom_toTopOf="@+id/txtRuaID"
                app:layout_constraintStart_toEndOf="@+id/radioButton"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintVertical_bias="0.0" />

            <RadioButton
                android:id="@+id/radioButtonRoubadaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="62dp"
                android:text="Roubada"
                app:layout_constraintBottom_toTopOf="@+id/txtRuaID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.029"
                app:layout_constraintStart_toEndOf="@+id/alertaFurtadaID"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtRuaID"
                android:layout_width="43dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="37dp"
                android:text="Rua"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/alertaRuaID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton" />

            <TextView
                android:id="@+id/txtNumeroID"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="32dp"
                android:text="Número"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/alertaNumeroID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButtonRoubadaID"
                app:layout_constraintVertical_bias="0.976" />

            <TextView
                android:id="@+id/txtBairroID"
                android:layout_width="59dp"
                android:layout_height="25dp"
                android:layout_marginEnd="323dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="323dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Bairro"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/alertaBairroID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alertaRuaID" />

            <TextView
                android:id="@+id/txtDataHoraID"
                android:layout_width="249dp"
                android:layout_height="25dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Data e Hora do Furto/Roubo"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/alertaDataID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alertaBairroID" />

            <EditText
                android:id="@+id/alertaDataID"
                android:layout_width="145dp"
                android:layout_height="46dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="00/00/0000"
                android:inputType="date"
                app:layout_constraintBottom_toTopOf="@+id/txtBoletimID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDataHoraID" />

            <EditText
                android:id="@+id/alertaHoraID"
                android:layout_width="109dp"
                android:layout_height="46dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="16dp"

                android:layout_marginStart="52dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="00:00"
                android:inputType="time"
                app:layout_constraintBottom_toTopOf="@+id/txtBoletimID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/alertaDataID"
                app:layout_constraintTop_toBottomOf="@+id/txtDataHoraID" />

            <TextView
                android:id="@+id/txtBoletimID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Boletim de Ocorrência"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/BoletimID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alertaDataID" />

            <EditText
                android:id="@+id/BoletimID"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="xxxxxxxxxxxxx"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/txtObservacaoID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBoletimID" />

            <EditText
                android:id="@+id/alertaDescricaoID"
                android:layout_width="310dp"
                android:layout_height="78dp"
                android:layout_marginBottom="31dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Descreva detalhes do Furto/Roubo"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/finalizarID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtObservacaoID" />

            <TextView
                android:id="@+id/txtObservacaoID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="Observações"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/alertaDescricaoID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BoletimID" />

            <Button
                android:id="@+id/finalizarID"
                android:layout_width="204dp"
                android:layout_height="47dp"
                android:layout_marginBottom="31dp"
                android:layout_marginEnd="86dp"
                android:layout_marginLeft="94dp"
                android:layout_marginRight="86dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/background_interno"
                android:drawableLeft="@drawable/ic_action_verde_right"
                android:text="Finalizar Registro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alertaDescricaoID" />

            <EditText
                android:id="@+id/alertaBairroID"
                android:layout_width="306dp"
                android:layout_height="46dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Bairro"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/txtDataHoraID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBairroID" />

            <EditText
                android:id="@+id/alertaRuaID"
                android:layout_width="210dp"
                android:layout_height="46dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Rua"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/txtBairroID"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRuaID" />

            <EditText
                android:id="@+id/alertaNumeroID"
                android:layout_width="84dp"
                android:layout_height="46dp"
                android:layout_marginBottom="28dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:hint="Número"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/alertaBairroID"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>